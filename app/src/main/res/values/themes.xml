<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FloatingTimer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="actionOverflowButtonStyle">@style/IconOverFlow</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>
    </style>


    <style name="Theme.FloatingTimer" parent="Base.Theme.FloatingTimer" />
    <style name="IconOverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:actionOverflowButtonStyle">@mipmap/setting_icon</item>
        <item name="android:src">@mipmap/setting_icon</item>
        <item name="android:scaleX">0.65</item>
        <item name="android:scaleY">0.65</item>
    </style>
    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:gravity">start</item>
    </style>
</resources>